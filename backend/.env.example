# Server
PORT=8000

# Database (SQLite file path)
DATABASE_PATH=./watermark.db

# 火山引擎 Ark (Seedream 图片生成)
ARK_API_KEY=your_ark_api_key
ARK_ENDPOINT=https://ark.cn-beijing.volces.com/api/v3
ARK_MODEL=doubao-seedream-4-5-251128

# 火山引擎 TOS (对象存储) - 可选
TOS_ACCESS_KEY_ID=your_access_key
TOS_SECRET_ACCESS_KEY=your_secret_key
TOS_BUCKET=your_bucket
TOS_REGION=cn-beijing
TOS_ENDPOINT=tos-cn-beijing.volces.com

# Apple IAP verification
APPLE_SHARED_SECRET=your_apple_shared_secret

# App settings
FREE_USAGE_LIMIT=1
MAX_IMAGE_SIZE_MB=10
MAX_IMAGE_DIMENSION=2048
